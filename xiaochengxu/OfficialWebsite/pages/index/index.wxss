.img{
  width: 100%;
}
.erBox,.sanBox{
  padding: 20rpx 10rpx;
  text-align: center;
}
.erBox .title,.sanBox .title{
  text-align: center;
  font-size: 60rpx;
  margin: 20rpx;
}
.video_box{
  width: 100%;
  position: relative;
}
.play_icon{
  position: absolute;
  z-index: 999;
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.play_icon image{
  width: 100%;
  height: 100%;
}